<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IntentBasicaActivity">

    <TextView
        android:id="@+id/txt_intent_basica"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_marginTop="92dp"
        android:fontFamily="@font/aladin"
        android:padding="8dp"
        android:text="@string/txt_intent_basica"
        android:textColor="@color/bg_vermelho_indian"
        android:textSize="25sp"
        android:textStyle="italic"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_intent_basica"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:onClick="ProximaTela"
        android:text="@string/btn_intent_basica"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_intent_basica" />
</androidx.constraintlayout.widget.ConstraintLayout>